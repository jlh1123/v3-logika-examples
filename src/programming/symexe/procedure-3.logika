import org.sireum.logika._

def absValue(x: Z): Z = {
  l"""{ requires  x â‰  0
        ensures   result > 0 }"""

  var ans: Z = 0
  if (x < 0) {
    ans = -x
  } else {
    ans = x
  }
  return ans
}

val n: Z = readInt()

if (n != 0) {

  val m: Z = absValue(n)

  l"""{ 1. m > 0  premise }"""

  assert(m > 0)
}
